@model IEnumerable<WebClinica.Models.Enfermedad>

@{
    ViewData["Title"] = "Enfermedad";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<head>
    <title>Enfermedad</title>
</head>
<partial name="_Menu" />
<div class="container">
    <!--Cambio aca-->
    <main class="pb-3" role="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-lg-12">
                    <h2 class="text-light">Lista Enfermedades</h2>
                </div>
            </div>
            <form asp-controller="Enfermedades" asp-action="Index" method="post" id="frmFilter">
                <div class="row contenedorBotones">
                        <partial name="_ActionButtons" />
                </div>
                <div class="col-md-12 divisor"><hr></div>
            </form>
            @if (Model.Count() > 0)
            {
                <table class="table table-hover border .table-responsive" id="TbEspecial">
                    <thead class="thead-dark">
                        <tr class="table-secondary">
                            <th>
                                @Html.DisplayNameFor(model => model.EnfermedadId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnfermedadId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <partial name="_AddEditAndView" model="item.EnfermedadId" />
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h2 style="color:red">No hay enfermedades en la lista.</h2>
            }
        </div>
        <form asp-action="Delete" asp-controller="Enfermedad" method="post" id="viewEliminarEnfermedad">
            <input type="hidden" id="txtEnfermedadId" name="EnfermedadId" />
        </form>
        <form asp-action="Edit" asp-controller="Enfermedad" method="post" id="viewEnfermedad">
            <input type="hidden" id="txtEnfermedadId" name="EnfermedadId" />
        </form>
    </main>
</div>
<partial name="_EndPag" />