@model Clinica.Models.Citas

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Content.cshtml";
    List<SelectListItem> ListaPacientes = ViewBag.ListaPacientes;
    List<SelectListItem> ListaMedicos = ViewBag.ListaMedicos;
    List<SelectListItem> ListaEspecialidades = ViewBag.ListaEspecialidades;
    String Fecha = @ViewBag.FechaCita;
}

}
<head>
    <title>Detalles cita</title>
</head>
<partial name="_Menu" />
<div class="container contenedorPrincipal">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Details" method="post" id="viewEditarCita">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Detalles de la cita</legend>
                        <br style="margin-top:15px;" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="CitaId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="CitaId" readonly="readonly" class="form-control"  />
                            </div>
                            <span asp-validation-for="CitaId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Paciente" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="PacienteId" asp-items="@ListaPacientes" disabled  class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Medico" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="MedicoId" asp-items="@ListaMedicos" disabled  class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="FechaCita" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input type="date" asp-for="FechaCita" value="@Fecha" readonly="readonly" class="form-control" />
                            </div>
                            <span asp-validation-for="FechaCita" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Diagnostico" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Diagnostico" readonly="readonly" class="form-control"  />
                            </div>
                            <span asp-validation-for="Diagnostico" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Especialidad" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="EspecialidadId" asp-items="@ListaEspecialidades" disabled class="form-control"></select>
                            </div>
                        </div>
                    </fieldset>
                    <div class="row contenedorBoton">
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg botonRegresar" id="regresar" asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>

