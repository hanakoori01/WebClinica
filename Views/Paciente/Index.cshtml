@model IEnumerable<Paciente>

@{
    ViewData["Title"] = "Paciente";
    Layout = "~/Views/Shared/_Content.cshtml";
}
<head>
    <title>Paciente</title>
</head>
<partial name="_Menu" />
<div class="container">
    <main class="pb-3" role="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-lg-12">
                    <h2 class="text-light">Lista Paciente</h2>
                </div>
            </div>
            <form asp-controller="Paciente" asp-action="Index" method="post" id="frmFilter">
                <div class="row contenedorBotones">
                    <div class="col-md-2 col-lg-2 text-right">
                        <a asp-action="Create" class="btn btn-success fa fa-plus-circle crear">
                            Nuevo
                        </a>
                    </div>
                    <div class="col-md-2 colo-lg-2 text-right">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-info fa fa fa-arrow-circle-left inicio">
                            Regresar al menú
                        </a>
                    </div>
                    <div class="col-md-2 col-lg-2 text-right">
                        <a asp-controller="ConsultaPacientes" asp-action="Index" class="btn btn-success fa fa-search-plus consulta">
                            Consulta
                        </a>
                    </div>
                </div>
                <div class="col-md-12 divisor"><hr></div>
            </form>
            @if (Model.Count() > 0)
            {
        <div class="contenedorTablas">
            <table class="table table-hover border .table-responsive" id="TbEspecial">
                <thead class="thead-dark">
                    <tr class="table-secondary trs">
                        <th>
                            @Html.DisplayNameFor(model => model.PacienteId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direccion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TelefonoContacto)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PacienteId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellidos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelefonoContacto)
                        </td>

                        <partial name="_AddEditAndView" model="item.PacienteId" />
                    </tr>
                    }
                </tbody>
            </table>
        </div>
            }
            else
            {
                <h2 style="color:red">No hay pacientes en la lista.</h2>
            }
        </div>
        <form asp-action="Delete" asp-controller="Paciente" method="post" id="viewEliminarPaciente">
            <input type="hidden" id="txtPacienteId" name="PacienteId" />
        </form>
        <form asp-action="Edit" asp-controller="Paciente" method="post" id="viewEditarPaciente">
            <input type="hidden" id="txtPacienteId" name="PacienteId" />
        </form>
    </main>
</div>
<partial name="_EndPag" />
