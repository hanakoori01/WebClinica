@model Clinica.Models.TipoUsuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<head>
    <title>Detalles del tipo Usuario</title>
</head>
<partial name="_Menu" />
<div class="container contenedorPrincipal">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Details" method="post" id="viewEditarCita">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Detalles del tipo Usuario</legend>
                        <br style="margin-top:15px;" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" disabled class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Descripcion" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Descripcion" disabled class="form-control"/>
                            </div>
                        </div>
                    </fieldset>
                    <div class="row contenedorBoton">
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg botonRegresar" id="regresar" asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>


