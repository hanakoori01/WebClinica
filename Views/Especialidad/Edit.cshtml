@model Especialidad

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Content.cshtml";
}
<head>
    <title>Editar especialidad</title>
</head>
<partial name="_Menu" />
<div class="container contenedorPrincipal">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Edit" method="post" id="viewEditarEspecialidad">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Editar especialidad</legend>
                        <br/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Descripcion" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <textarea asp-for="Descripcion" row="4" cols="50" class="form-control" placeholder="Descripcion"></textarea>
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="row contenedorBoton">
                        <div class="col-md-4 text-align-right">
                            <a class="btn btn-primary btn-lg botonEditar" id="Editar" onclick="Editar()">Editar</a>
                        </div>
                        <br />
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg botonRegresar" id="regresar" asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<script src="~/js/especializado.js" asp-append-version="true"></script>
<partial name="_EndPag" />