@model WebClinica.Models.Medico

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Content.cshtml";
}

<head>
    <title>Editar medico</title>
</head>
<partial name="_Menu" />
<div class="container" style="margin-top:15px;">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Create" method="post" id="viewEditar">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Agregar nuevo medico</legend>
                        <br style="margin-top:15px;" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="MedicoId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="MedicoId" readonly="readonly" class="form-control" placeholder="ID Medico" />
                            </div>
                            <span asp-validation-for="MedicoId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Apellidos" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Apellidos" class="form-control" placeholder="Apellidos" />
                            </div>
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Direccion" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Direccion" class="form-control" placeholder="Direccion" />
                            </div>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="TelefonoFijo" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="TelefonoFijo" class="form-control" placeholder="Telefono de habitacion" />
                            </div>
                            <span asp-validation-for="TelefonoFijo" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="TelefonoCelular" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="TelefonoCelular" class="form-control" placeholder="Telefono celular" />
                            </div>
                            <span asp-validation-for="TelefonoCelular" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Foto" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Foto" class="form-control" placeholder="True o False" />
                            </div>
                            <span asp-validation-for="Foto" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="EspecialidadId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="EspecialidadId" class="form-control" placeholder="Especialidad Id" />
                            </div>
                            <span asp-validation-for="EspecialidadId" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="row" style="display:flex; justify-content:space-between">
                        <div class="col-md-4 text-align-right">
                            <a class="btn btn-primary btn-lg" id="editar" onclick="editar()" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;">Editar</a>
                        </div>
                        <br />
                        <div class="col-md-4">
                            <a class="btn btn-info btn-lg" id="regresar" asp-action="Index" style="border-radius: 50px; padding: 12px 15px; border-width: 1px; border-style: solid; text-transform: uppercase;">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<partial name="_EndPag" />