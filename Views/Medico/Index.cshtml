@model IEnumerable<MedicoEspecialidad>
@using WebClinica.Models.ViewModel
@{
    ViewData["Title"] = "Medico";
    Layout = "~/Views/Shared/_Content.cshtml";
}
<head>
    <title>Medico</title>
</head>
<partial name="_Menu" />
<div class="container">
    <main class="pb-3" role="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-lg-12">
                    <h2 class="text-light">Lista Medico</h2>
                </div>
            </div>
            <form asp-controller="Medico" asp-action="Index" method="post" id="frmFilter">
                <div class="row contenedorMedico">
                    <div class="col-md-2 col-lg-2 text-right">
                        <partial name="_CreateButtonPartial" />
                    </div>
                    <br />
                    <div class="col-md-2 col-lg-2 text-right">
                        <partial name="_BackHome" />
                    </div>
                </div>
                <div class="col-md-12" style="color:black;"><hr></div>
            </form>
            @if (Model.Count() > 0)
            {
                <table class="table table-hover border .table-responsive" id="TbEspecial">
                    <thead class="thead-dark">
                        <tr class="table-secondary">
                            <th>
                                @Html.DisplayNameFor(model => model.MedicoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apellidos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Direccion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TelefonoFijo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TelefonoCelular)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Especialidad)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedicoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apellidos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TelefonoFijo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TelefonoCelular)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Especialidad)
                                </td>
                                <partial name="_AddEditAndView" model="item.MedicoId" />
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h2 style="color:red">No hay medicos en la lista.</h2>
            }
        </div>
        <form asp-action="Delete" asp-controller="Medico" method="post" id="viewEliminarMedico">
            <input type="hidden" id="txtMedicoId" name="MedicoId" />
        </form>
        <form asp-action="Edit" asp-controller="Medico" method="post" id="viewEditar">
            <input type="hidden" id="txtMedicoId" name="MedicoId" />
        </form>
    </main>
</div>
<partial name="_EndPag" />
