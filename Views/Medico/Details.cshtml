@model WebClinica.Models.Medico

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Content.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaEspecialidades;
}
<head>
    <title>Detalles médicos</title>
</head>
<partial name="_Menu" />
<div class="container contenedorPrincipal">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Details" method="post" id="viewDetailsMedico">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Detalles del médico</legend>
                        <br />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="MedicoId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="MedicoId" readonly="readonly"  class="form-control"  />
                            </div>
                            <span asp-validation-for="MedicoId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" readonly="readonly" class="form-control"  />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Apellidos" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Apellidos" readonly="readonly" class="form-control"  />
                            </div>
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Direccion" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Direccion" readonly="readonly" class="form-control"  />
                            </div>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="TelefonoFijo" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="TelefonoFijo" readonly="readonly" class="form-control"  />
                            </div>
                            <span asp-validation-for="TelefonoFijo" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="TelefonoCelular" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="TelefonoCelular" readonly="readonly" class="form-control"  />
                            </div>
                            <span asp-validation-for="TelefonoCelular" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="EspecialidadId" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="EspecialidadId" asp-items="@Lista" disabled class="form-control" ></select>
                            </div>
                            <span asp-validation-for="EspecialidadId" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="row contenedorBoton">
                        <div class="col-md-6">
                            <a class="btn btn-info btn-lg botonRegresar" id="regresar" asp-action="Index">Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<partial name="_EndPag" />